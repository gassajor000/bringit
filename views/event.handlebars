<html>
<head>
	<title>Bringit! - Event Title</title>

	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
	<link href="css/event.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/event-jq.js"></script>
</head>
<body>
    <div class="container toolbar">
        <div class="toolbar-back"><a alt="back" href="/"><i class="material-icons">arrow_back</i></a></div>
        <div class="toolbar-title"><h2 class="page-title">{{title}}</h2></div>
        <div class="toolbar-btn"><a alt="point totals" href="/points"><i class="material-icons">people_alt</i></a></div>
        <div class="toolbar-btn"><a alt="event settings" href="/event-settings"><i class="material-icons">settings</i></a></div>
    </div>

<div id="items-list">
    {{#each categories}}
    <div class="card item-category">
    <div class="card-header" id="headingOne">
        <p class="h3">{{category-name}}</p>
      {{!-- <h5 class="mb-0">
        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Collapsible Group Item #1
        </button>
      </h5> --}}
    </div>

    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne">
      <div class="card-body">

          <table class="table">
            <tbody>
                {{#each items}}
                <tr data-toggle="modal" data-target="#detailsModal" data-item="{{jsonify this}}">
                <td class="item-cell">{{item-name}}</td>
                <td class="item-cell">x{{quantity}}</td>
                <td class="item-cell">{{points}}pts</td>
                <td class="item-cell">{{#if claimed-by}}
                    {{#each claimed-by}}
                    <div class="avatar">{{getFirstLetter this.name}}</div>
                    {{/each}}
                    {{else}}<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#claimModal" data-item-name="{{item-name}}" data-quantity="{{quantity}}">Claim</button>{{/if}}</td>
                </tr>
                {{/each}}
            </tbody>
            </table>


        <a alt="event settings" href="#"><i class="material-icons">add</i></a>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<div class="modal fade" id="claimModal" tabindex="-1" role="dialog" aria-labelledby="claimModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="claimModalLabel">Claim Item</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div class="input-group mb-3">
          <div class="input-group-addon">
            <span class="input-group-text" id="quantity-addon"></span>
          </div>
          <input type="text" class="form-control" placeholder="How many?" aria-label="Quantity" aria-describedby="quantity-addon">
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Claim</button>
      </div>
    </div>
  </div>
</div>

   <div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="detailsModalLabel">Item Name</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          {{!-- Item details here --}}
          <ul class="item-details-list">
            <li class="chip" id="item-quantity">quantity</li>
            <li class="chip" id="item-points">points</li>
          </ul>
          <p class="well well-sm" id="item-details">details</p>

          <table class="table" id="assignee-list">
            {{!-- This gets filled in with javascript --}}
          </table>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


</body>
</html>
