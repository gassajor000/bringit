<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>Points</title>
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="js/bootstrap.js"></script>
    
    <link rel="stylesheet" href="css/circle.css">
	<link href="css/points.css" rel="stylesheet">


    <script src="js/points-jq.js"></script>

  <div id="pointsData" data-points="{{jsonify points}}" data-total="{{total}}", data-required="{{required}}"></div>

  <script>
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
	ga('create', 'UA-158820516-2', 'auto');
	ga('require', 'GTM-TLS38TB');
	ga('send', 'pageview');
	</script>

  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-158820516-1"></script>

</head>

<body>
 <div class="container toolbar">
    <div class="toolbar-back"><a alt="back" href="/index"><i class="material-icons">arrow_back</i></a></div>
    <div class="toolbar-title"><h2 class="page-title">{{event.title}}</h2></div>
    <div class="dropdown toolbar-btn">
        <div class="dropdown-toggle" data-toggle="dropdown" data-target="eventActionsMenu"><i class="material-icons">more_vert</i></div>
           
        <ul class="dropdown-menu pull-right" id="eventActionsMenu">
        <li class="dropdown-item"><a href="/edit?id={{event.id}}">Edit</a></li>
        <li role="separator" class="divider"></li>
        <li class="dropdown-item"><a href="/index" id="deleteEventBtn"><div class="text-danger">Delete</div></a></li>
          </ul>                     
        </div>
    </div>

      <ul class="nav nav-tabs tabs-col-2">
        <li role="presentation"><a href="/event?id={{event.id}}">Items</a></li>
        <li role="presentation" class="active"><a href="#">Points</a></li>
    </ul>

    <div id="progressContainer">
        <div class="c100 big green">
            <span id="progressNum"></span>
            <div class="slice">
                <div class="bar"></div>
                <div class="fill"></div>
            </div>

        </div>
        <div id="goal">Goal: {{required}}pts</div>

    </div>
    {{!-- <h3 class = text-center>Total points: {{total}}</h3> --}}

    <table>
	    {{#each points}}
            <tr class="table-line">
                <td><div class="avatarP">{{getFirstLetter this.name}}</div>{{name}}</td>
                <td class="points-cell">{{points}}pts</td>
            </tr>
	    {{/each}}
    </table>
    {{!-- <hr> --}}

</body>
</html>